<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href='/css/bootstrap.css'/>
		{% endblock %}

		{% block navbar %}

			{#Navbar#}
			<nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">

				<a class="navbar-brand" href="/accueil">
					<img src="/images/logo.jpg"/>
				</a>

				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/reunion">Réunion</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/participant">Participants</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/rapport">Rapports</a>
					</li>
				</ul>
			</nav>

			{#Header#}
			<div class="jumbotron jumbotron-fluid bg-secondary text-white">
				<div class="container">
					<h1 class="display-2">Meeting Management</h1>
					<p class="lead">
						<h5>Mieux gérer les présences aux réunions</h5>
					</p>
				</div>
			</div>

		{% endblock %}

		{% block carousel %}{% endblock %}

	</head>
	<body>
		{% block body %}{% endblock %}
		{% block javascripts %}
			<script src="/js/jquery-3.4.1.js"></script>
			<script src="/js/bootstrap.bundle.js"></script>
			<script src="/js/bootstrap.min.js"></script>
			<script src="/js/bootstrap.js"></script>
			<script src="/js/bootstrap.bundle.min.js"></script>
		{% endblock %}
	</body>
</html>
